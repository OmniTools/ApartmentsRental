<form method="post" action="{{ controller.getActionUri('ajaxCreateContact', { customerId: customer.getId() }) }}" class="ajax">

    <div class="modal-body">

        <div class="form-row">

            <div class="form-group col-md-4">
                <label for="contactType">Example select</label>
                <select class="form-control" id="contactType" name="contactType">
                    <option value="Email">E-Mail</option>
                    <option value="Phone">Telefon</option>
                    <option value="Fax">Fax</option>
                </select>
            </div>
            <div class="form-group col-md-8">
                <label for="lastname">Wert</label>
                <input type="text" class="form-control" id="lastname" name="value" value="">
            </div>

        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">neue Kontaktdaten erstellen</button>
    </div>

</form>